{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": ".",
        "types": ["jest-dom", "node"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./node_modules/@types"],
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["**/*", "./config/jest/setupTests.ts"],
    "exclude": ["cypress.config.ts", "./cypress", "node_modules/cypress", "scripts/*", "node_modules/"]
}
