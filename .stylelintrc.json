{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-clean-order"
  ],
  "ignoreFiles": [
    "build/**/*.css",
    "src/app/styles/reset.scss",
    "node_modules/**.css"
  ],
  "rules": {
    "indentation": 4,
    "block-no-empty": null,
    "selector-class-pattern": null,
    "color-function-notation": null,
    "scss/no-global-function-names": null
  }
}